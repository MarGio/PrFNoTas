<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gio.notas.Datos_Tareas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/txttitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Titulo"
            android:ems="10"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/txtdescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:ems="10"
            android:hint="@string/Descripcion"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/txtfecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:defaultFocusHighlightEnabled="false"
            android:ems="10"
            android:enabled="true"
            android:hint="@string/Fecha"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/txthora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="true"
            android:hint="@string/Hora"
            android:inputType="textPersonName"
            android:text="" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageBtnVideoTarea"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@color/primary"
                android:src="@android:drawable/presence_video_online" />

            <ImageButton
                android:id="@+id/imageBtnimagenTarea"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@color/primary"
                android:src="@android:drawable/ic_menu_camera" />

            <ImageButton
                android:id="@+id/imageBtnaudioTarea"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@color/primary"
                android:src="@android:drawable/presence_audio_away" />
        </LinearLayout>

        <Button
            android:id="@+id/btnguardarTarea"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="@string/Agregar"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnactualizar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?attr/actionModeSplitBackground"
            android:text="@string/Actualizar"
            android:textSize="18sp" />

    </LinearLayout>

</FrameLayout>
